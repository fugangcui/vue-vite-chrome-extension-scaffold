{
  "name": "GPT Corrector",
  "short_name": "GPT Corrector",
  "manifest_version": 3,
  "description": "A simple GPT-3 based grammar corrector",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "declarativeContent"],
  "host_permissions": [],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/16*16.png",
      "32": "/images/32*32.png",
      "48": "/images/48*48.png",
      "128": "/images/128*128.png"
    },
    "default_title": "GPT Corrector"
  },
  
  "icons": {
    "16": "/images/16*16.png",
    "32": "/images/32*32.png",
    "48": "/images/48*48.png",
    "128": "/images/128*128.png"
  }
}
